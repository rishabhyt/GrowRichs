<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ExperimentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Donâ€™t make change too complicated , just begin "
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:text="06:00"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="84sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.nhattuan.growrichs.ultil.ButtonPlus
                android:id="@+id/btn_start_visual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:background="@drawable/next_bt"
                android:foreground="@drawable/ripple_effect"
                android:text="@string/btn_start"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"></View>

            <com.nhattuan.growrichs.ultil.ButtonPlus
                android:foreground="@drawable/ripple_effect"
                android:id="@+id/btn_snooze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:background="@drawable/next_bt"
                android:text="@string/btn_stop"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>