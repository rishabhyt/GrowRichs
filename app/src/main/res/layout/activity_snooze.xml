<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SnoozeActivity">

    <LinearLayout
        android:id="@+id/bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.nhattuan.growrichs.ultil.ButtonPlus
            android:id="@+id/cancle_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/next_bt"
            android:foreground="@drawable/ripple_effect"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />

        <com.nhattuan.growrichs.ultil.ButtonPlus
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/next_bt"
            android:foreground="@drawable/ripple_effect"
            android:text="@string/done"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/snooze_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_ly"
        android:layout_margin="10dp"
        android:divider="@null"
        android:dividerHeight="0dp" />
</RelativeLayout>