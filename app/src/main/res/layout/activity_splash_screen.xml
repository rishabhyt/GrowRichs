<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="com.nhattuan.growrichs.Activity.SplashScreenActivity">

    <ImageView
        android:id="@+id/app_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/logo_trans" />

    <com.nhattuan.growrichs.ultil.TextviewPlus
        android:id="@+id/logan_tv"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:text="@string/splash_screen_logan"
        android:textAlignment="center"
        android:layout_below="@id/app_logo_iv"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</RelativeLayout>
