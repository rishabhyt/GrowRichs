    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_close"
        android:layout_below="@+id/btn_secret">

        <com.nhattuan.growrichs.ultil.TextviewPlus
            android:id="@+id/tv_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_findhere"
            android:text="Got troubles ? Need my help ?"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold|italic" />

        <com.nhattuan.growrichs.ultil.ButtonPlus
            android:id="@+id/btn_findhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:background="@drawable/next_bt"
            android:foreground="@drawable/ripple_effect"
            android:gravity="center"
            android:text="Find Me Here"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.nhattuan.growrichs.ultil.ButtonPlus
