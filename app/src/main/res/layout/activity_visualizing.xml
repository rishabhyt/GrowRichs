<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.VisualizingActivity">

    <com.nhattuan.growrichs.ultil.ButtonPlus
        android:id="@+id/btn_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/next_bt"
        android:foreground="@drawable/ripple_effect"
        android:gravity="center"
        android:text="Listen To Earl Nightingale"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ln_slide"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/btn_secret"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>


        <LinearLayout
            android:id="@+id/sliderDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <com.nhattuan.growrichs.ultil.ButtonPlus
        android:id="@+id/btn_make_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_slide"
        android:layout_marginTop="16dp"
        android:background="@drawable/next_bt"
        android:foreground="@drawable/ripple_effect"
        android:gravity="center"
        android:text="Add 5 ideas To Your List"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

